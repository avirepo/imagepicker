<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff387CBE">

    <ImageView
            android:id="@+id/imv_image_picker_action_bar_back"
            android:layout_width="@dimen/top_bar_btn_size"
            android:layout_height="@dimen/top_bar_btn_size"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/abc_action_bar_up_description"
            android:src="@drawable/ic_back"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:visibility="visible"/>

    <TextView
            android:id="@+id/txv_image_picker_action_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAllCaps="true"
            android:textColor="#fff2f2f2"
            tools:text="Select Image"
            android:textSize="18sp"
            />

    <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    <ImageButton
            android:id="@+id/btn_image_picker_action_bar_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera_white"
            android:padding="6dp"
            android:layout_margin="6dp"
            android:layout_gravity="center_vertical"
            android:background="#ff387CBE"
            android:visibility="visible"
            tools:ignore="ContentDescription"/>

    <ImageButton
            android:id="@+id/btn_image_picker_action_bar_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_check"
            android:layout_gravity="center_vertical"
            android:padding="6dp"
            android:layout_marginRight="6dp"
            android:background="#ff387CBE"
            android:visibility="visible"
            tools:ignore="ContentDescription,RtlHardcoded"/>

</LinearLayout>
